<div class="container marketing">
  <h1><%= @page.title %></h1>
  <div class="container-border">
    <%= @page.body %>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <tr><h3>Page Collaborators</h3></tr>
        <% @page.collaborators.each do |user| %>
          <tr>
            <td><%=user.email%></br>
          </tr>
        <% end %>
    </table>
  </div>
</div>
  <div class="row">
    <div class="col-md-6">
      <%= button_to 'Edit', edit_page_path(@page), {:method=> :get, :class => "btn btn-warning"}%>
    </div>
    <div class="col-md-6">
      <%= button_to 'Delete', page_path(@page), {:method=> :delete, :class => "btn btn-danger"}%>
    </div>
  </div>
</div>
